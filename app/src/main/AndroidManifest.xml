            android:exported="false"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".Main4_2"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible|adjustPan"
            android:exported="false"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".Main3_2"
            android:screenOrientation="portrait"
